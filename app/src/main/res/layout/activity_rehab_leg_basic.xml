<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="2dp"
        android:paddingRight="2dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:id="@+id/titleLegWindow"
                android:text="Basic Level Exercise: Standing and Balance"
                android:textColor="@android:color/black"
                android:textSize="20sp"
                android:textStyle="bold"
                />
            <TextView
                android:id="@+id/msgLegBasicTitle"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@id/titleLegWindow"
                android:layout_alignParentStart="true"
                android:textColor="@android:color/black"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"/>
            <TextView
                android:id="@+id/titleLegBasic1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Exercise #1 Assisted Lateral Leg Swings "
                android:textColor="@android:color/black"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_below="@id/msgLegBasicTitle" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/imgLegBasic1"
                android:layout_below="@id/titleLegBasic1" />

            <TextView
                android:id="@+id/msgLegBasic1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@id/imgLegBasic1"
                android:layout_alignParentStart="true"
                android:textColor="@android:color/black"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"/>
            <TextView
                android:id="@+id/titleLegBasic2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Exercise #2 Assisted Knee Raises"
                android:textColor="@android:color/black"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_below="@id/msgLegBasic1" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/imgLegBasic2"
                android:layout_below="@id/titleLegBasic2" />

            <TextView
                android:id="@+id/msgLegBasic2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@id/imgLegBasic2"
                android:layout_alignParentStart="true"
                android:textColor="@android:color/black"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"/>
            <TextView
                android:id="@+id/titleLegBasic3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Exercise #3 Assisted Reverse Leg Swings"
                android:textColor="@android:color/black"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_below="@id/msgLegBasic2" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/imgLegBasic3"
                android:layout_below="@id/titleLegBasic3" />

            <TextView
                android:id="@+id/msgLegBasic3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@id/imgLegBasic3"
                android:layout_alignParentStart="true"
                android:textColor="@android:color/black"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"/>




        </RelativeLayout>

    </ScrollView>



</RelativeLayout>

