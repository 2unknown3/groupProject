<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white">

    <!--  <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_alignParentTop="true"
          android:layout_centerHorizontal="true"
          android:layout_marginTop="1dp"
          android:text="Sensory Re-Education"
          android:textColor="@android:color/black"
          android:textSize="20sp" />
  -->

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="2dp"
        android:paddingRight="2dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:id="@+id/titleBalanceWindow"
                android:text="Intermediate Level Exercises"
                android:textColor="@android:color/black"
                android:textSize="20sp"
                android:textStyle="bold"
                />
            <TextView
                android:id="@+id/msgBalanceIntermediateTitle"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@id/titleBalanceWindow"
                android:layout_alignParentStart="true"
                android:textColor="@android:color/black"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"/>
            <TextView
                android:id="@+id/titleBalanceIntermediate1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Exercise 3:  Heel Raises (Not Holding On)"
                android:textColor="@android:color/black"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_below="@id/msgBalanceIntermediateTitle" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/imgBalanceIntermediate1"
                android:layout_below="@id/titleBalanceIntermediate1" />

            <TextView
                android:id="@+id/msgBalanceIntermediate1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@id/imgBalanceIntermediate1"
                android:layout_alignParentStart="true"
                android:textColor="@android:color/black"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"/>
            <TextView
                android:id="@+id/titleBalanceIntermediate2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Exercise 4:  Side Stepping (Not Holding On)"
                android:textColor="@android:color/black"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_below="@id/msgBalanceIntermediate1" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/imgBalanceIntermediate2"
                android:layout_below="@id/titleBalanceIntermediate2" />

            <TextView
                android:id="@+id/msgBalanceIntermediate2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@id/imgBalanceIntermediate2"
                android:layout_alignParentStart="true"
                android:textColor="@android:color/black"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"/>
            <TextView
                android:id="@+id/titleBalanceIntermediate3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Exercise 5:  Heel-to-Toe Walking"
                android:textColor="@android:color/black"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_below="@id/msgBalanceIntermediate2" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/imgBalanceIntermediate3"
                android:layout_below="@id/titleBalanceIntermediate3" />

            <TextView
                android:id="@+id/msgBalanceIntermediate3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@id/imgBalanceIntermediate3"
                android:layout_alignParentStart="true"
                android:textColor="@android:color/black"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"/>
            <TextView
                android:id="@+id/titleBalanceIntermediate4"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Exercise 6:  Squats against Gym Ball"
                android:textColor="@android:color/black"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_below="@id/msgBalanceIntermediate3" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/imgBalanceIntermediate4"
                android:layout_below="@id/titleBalanceIntermediate4" />

            <TextView
                android:id="@+id/msgBalanceIntermediate4"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@id/imgBalanceIntermediate4"
                android:layout_alignParentStart="true"
                android:textColor="@android:color/black"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"/>



        </RelativeLayout>

    </ScrollView>



</RelativeLayout>