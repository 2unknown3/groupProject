<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white">

    <!--  <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_alignParentTop="true"
          android:layout_centerHorizontal="true"
          android:layout_marginTop="1dp"
          android:text="Sensory Re-Education"
          android:textColor="@android:color/black"
          android:textSize="20sp" />
  -->

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="2dp"
        android:paddingRight="2dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:id="@+id/titleLegWindow"
                android:text="Intermediate Level Exercises: Bridging"
                android:textColor="@android:color/black"
                android:textSize="20sp"
                android:textStyle="bold"
                />
            <TextView
                android:id="@+id/msgLegIntermediateTitle"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@id/titleLegWindow"
                android:layout_alignParentStart="true"
                android:textColor="@android:color/black"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"/>
            <TextView
                android:id="@+id/titleLegIntermediate1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Exercise 4: “Inner Range Quad Movement” Leg Raises"
                android:textColor="@android:color/black"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_below="@id/msgLegIntermediateTitle" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/imgLegIntermediate1"
                android:layout_below="@id/titleLegIntermediate1" />

            <TextView
                android:id="@+id/msgLegIntermediate1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@id/imgLegIntermediate1"
                android:layout_alignParentStart="true"
                android:textColor="@android:color/black"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"/>
            <TextView
                android:id="@+id/titleLegIntermediate2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Exercise 5: Ski Squats – Wall Sits"
                android:textColor="@android:color/black"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_below="@id/msgLegIntermediate1" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/imgLegIntermediate2"
                android:layout_below="@id/titleLegIntermediate2" />

            <TextView
                android:id="@+id/msgLegIntermediate2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@id/imgLegIntermediate2"
                android:layout_alignParentStart="true"
                android:textColor="@android:color/black"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"/>
            <TextView
                android:id="@+id/titleLegIntermediate3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Exercise 6: Ski Squats – Wall Sits with Pilates Ball"
                android:textColor="@android:color/black"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_below="@id/msgLegIntermediate2" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/imgLegIntermediate3"
                android:layout_below="@id/titleLegIntermediate3" />

            <TextView
                android:id="@+id/msgLegIntermediate3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@id/imgLegIntermediate3"
                android:layout_alignParentStart="true"
                android:textColor="@android:color/black"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"/>




        </RelativeLayout>

    </ScrollView>



</RelativeLayout>